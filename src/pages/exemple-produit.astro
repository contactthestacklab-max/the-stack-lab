---
import ProductLayout from '../layouts/ProductLayout.astro';

// Product Configuration - Modify these values for each product
const productConfig = {
  // SEO
  title: "My Honest Review of [Product] - Complete 2025 Test | The Stack Lab",
  description: "Discover my honest review of [Product] after 3 months of use. Full test, pros, cons, and final verdict.",

  // Hero
  headline: "I Finally Found the Solution to [Problem] After Years of Searching",
  heroImage: "/images/product-hero.svg", // Replace with your image

  // Product
  productName: "Product Name",
  affiliateLink: "https://systeme.io/?sa=sa02578596435c11239325f4ed38fa01ed82d1c870",

  // PROBLEM (P)
  problemTitle: "My Struggle with [Problem]...",
  problemText: `
    <p>Like many of you, I spent years struggling with [problem].
    Every morning, I would wake up with [symptom/frustration].</p>
    <p>I tried [solution 1], [solution 2], and even [solution 3].
    Nothing really worked. I was starting to lose hope.</p>
  `,

  // AGITATION (A)
  agitationTitle: "The Hidden Cost of [Problem]",
  painPoints: [
    "Wasted time and money on ineffective solutions",
    "Impact on my daily life and well-being",
    "Frustration from not finding a real solution",
    "Feeling alone in facing this problem",
  ],

  // SOLUTION (S)
  solutionTitle: "The Discovery That Changed Everything",
  solutionText: "After months of research, I discovered [Product]. At first, I was skeptical. But the results speak for themselves.",
  benefits: [
    { title: "Fast Results", description: "Visible within the first few weeks of use" },
    { title: "Easy to Use", description: "No technical skills required" },
    { title: "Customer Support", description: "A team available 24/7 to help you" },
  ],

  // Testimonials
  testimonials: [
    { name: "Sarah M.", rating: 5, text: "Amazing! I saw results in just 2 weeks." },
    { name: "Michael R.", rating: 5, text: "Finally something that works. I recommend it 100%." },
    { name: "Jennifer K.", rating: 4, text: "Great product, customer support is top-notch." },
    { name: "David L.", rating: 5, text: "I wish I had discovered this sooner!" },
  ],

  // Comparison
  comparisonItems: [
    { feature: "Proven Results", product: true, competitors: false },
    { feature: "Money-Back Guarantee", product: true, competitors: false },
    { feature: "24/7 Support", product: true, competitors: "Limited" },
    { feature: "Free Shipping", product: true, competitors: false },
    { feature: "Natural Ingredients", product: true, competitors: "50%" },
  ],

  // CTA
  ctaText: "Try It Now",
  finalCtaTitle: "Ready to Transform Your Life?",
  finalCtaText: "Join thousands of people who have already taken the first step.",
};
---

<ProductLayout {...productConfig} />
