---
import { SITE_CONFIG } from '../utils/constants';

interface Props {
  name?: string;
  photo?: string;
  lastUpdated?: string;
}

const {
  name = SITE_CONFIG.author.name,
  photo = SITE_CONFIG.author.photo,
  lastUpdated = SITE_CONFIG.lastUpdated,
} = Astro.props;
---

<div class="flex items-center gap-4 py-4 border-y border-gray-100">
  <img
    src={photo}
    alt={`Photo of ${name}`}
    width="48"
    height="48"
    class="w-12 h-12 rounded-full object-cover bg-gray-200"
    loading="eager"
  />
  <div>
    <p class="font-medium text-brand-dark">{name}</p>
    <p class="text-sm text-gray-500">Last updated: {lastUpdated}</p>
  </div>
</div>
