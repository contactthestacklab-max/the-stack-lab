---
import DisclosureBanner from './DisclosureBanner.astro';
---

<DisclosureBanner />

<header class="sticky top-0 z-40 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <nav class="max-w-4xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Site Name -->
      <a href="/" class="flex items-center">
        <svg width="180" height="40" viewBox="0 0 250 60" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="5" y="35" width="30" height="10" rx="2" fill="#092326"/>
          <rect x="5" y="22" width="30" height="10" rx="2" fill="#16B4F2"/>
          <rect x="5" y="9" width="30" height="10" rx="2" fill="#F2913D"/>
          <text x="45" y="32" font-family="Arial, sans-serif" font-weight="800" font-size="22" fill="#092326">THE STACK</text>
          <text x="175" y="32" font-family="Arial, sans-serif" font-weight="800" font-size="22" fill="#F2913D">LAB</text>
          <circle cx="38" cy="12" r="3" fill="#F2913D"/>
        </svg>
      </a>

      <!-- Fake Navigation (anchor links) -->
      <ul class="hidden md:flex items-center gap-6 text-sm">
        <li><a href="#home" class="hover:text-brand-primary transition-colors">Home</a></li>
        <li><a href="#about" class="hover:text-brand-primary transition-colors">About</a></li>
        <li><a href="#reviews" class="hover:text-brand-primary transition-colors">Reviews</a></li>
        <li><a href="#contact" class="hover:text-brand-primary transition-colors">Contact</a></li>
      </ul>

      <!-- Mobile menu button -->
      <button class="md:hidden p-2" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>
